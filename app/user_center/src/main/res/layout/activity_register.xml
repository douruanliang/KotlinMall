<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.RegisterActivity">

    <com.dourl.baselibrary.widgets.HeaderBar
        style="@style/MatchWrap"
        app:rightText="@string/user_login"
        app:titleText="@string/user_register"></com.dourl.baselibrary.widgets.HeaderBar>

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mMobileEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入手机号码"></EditText>

        <com.dourl.baselibrary.widgets.VerifyButton
            android:id="@+id/mGetVerifyCodeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"></com.dourl.baselibrary.widgets.VerifyButton>

    </LinearLayout>

    <EditText
        android:id="@+id/mVerifyCodeEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"></EditText>

    <EditText
        android:id="@+id/mPwdEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"></EditText>

    <EditText
        android:id="@+id/mPwd2Et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请确认密码"></EditText>

    <Button
        android:id="@+id/mRegisterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="注册"></Button>
</LinearLayout>